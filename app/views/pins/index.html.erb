<div class="row pinterest-grid">
  <% @pins.each do |pin| %>
    <div class="col-md-3 pin-item">
      <div class="card pin">
        <% if pin.pin_image.attached? %>
          <%= link_to (image_tag pin.pin_image, class: "img-fluid card-img-top"), pin %>
        <% else %>
        <%end %>
        <div class="card-body">
          <p><%= pin.description %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Edit', edit_pin_path(pin) %> | <%= link_to 'Destroy', pin, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
